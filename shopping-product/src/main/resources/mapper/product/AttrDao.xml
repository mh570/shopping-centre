<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fengling.shopping.product.dao.AttrDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.fengling.shopping.product.entity.AttrEntity" id="attrMap">
        <result property="attrId" column="attr_id"/>
        <result property="attrName" column="attr_name"/>
        <result property="searchType" column="search_type"/>
        <result property="icon" column="icon"/>
        <result property="valueSelect" column="value_select"/>
        <result property="attrType" column="attr_type"/>
        <result property="enable" column="enable"/>
        <result property="catelogId" column="catelog_id"/>
        <result property="showDesc" column="show_desc"/>
        <result property="valueType" column="value_type"/>
    </resultMap>
    <select id="selectByAttrId" resultType="com.fengling.shopping.product.entity.AttrEntity">
        SELECT attr_id,search_type,enable,show_desc,icon,catelog_id,value_select,attr_type,attr_name,value_type FROM pms_attr WHERE attr_id=#{attrId}

    </select>


</mapper>